<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="10dp"
        android:maxHeight="?android:attr/actionBarSize"
        local:layout_collapseMode="pin"
        local:layout_scrollFlags="scroll|enterAlways|snap"
        local:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        local:theme="@style/ToolBarStyle">

        <ImageView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/hint_todo"
            android:gravity="start"
            android:src="@drawable/ic_app_name" />
    </androidx.appcompat.widget.Toolbar>


</LinearLayout>