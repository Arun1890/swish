                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_medium"
                        android:text="@string/hint_zara"
                        android:textColor="@color/black"
                        android:textSize="@dimen/offer_card_title" />

