<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_layout_store"
    android:layout_width="@dimen/stories_card_width"
    android:layout_height="@dimen/stories_card_height">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@drawable/sample_img"
        app:riv_border_color="@color/white"
        app:riv_border_width="1dip"
        app:riv_corner_radius="@dimen/curved_corner_radius"
        app:riv_mutate_background="true" />

    <ImageView
        android:id="@+id/mini_image"
        android:layout_width="@dimen/stories_card_image_width_height"
        android:layout_height="@dimen/stories_card_image_width_height"
        android:layout_margin="15dp"
        android:contentDescription="@string/hint_todo"
        android:src="@drawable/ic_amazon_normal" />

</RelativeLayout>
